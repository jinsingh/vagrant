<?xml version="1.0" encoding="UTF-8"?>
<!-- this is just a reference - hence reason for hardcoded vals
all of them are managed by puppet using templates in either capapp
or in windows/dbmap_wms module.
PIOTR -->
<config-params>

   <params>
      <param name="server-ip">10.179.68.78</param> <!-- app server IP -->
      <param name="server-port">80</param>

      <param name="server-ip-altRMI">192.168.20.23</param>
      <param name="server-port-altRMI">8080</param>

      <param name="server-ip-dbgis">192.168.20.23</param>
      <param name="server-port-dbgis">8080</param>

      <param name="db-host-siti">10.179.195.120</param> <!-- IP of ORACLE DB -->
      <param name="db-port-siti">1521</param>
      <param name="db-name-siti">capd</param> <!-- service_name da tnsnames.ora del database -->
      <param name="db-SID-siti">capd</param> <!-- nome (o alias) del database come definito in tnsnames.ora -->

      <param name="db-username-siti">siti</param> <!-- nome dello schema di siti -->
      <param name="db-password-siti">siti_pwd</param> <!-- password dello schema di siti -->
      <param name="db-password-type-siti">PLAIN</param> <!-- modalità della password per siti (da usarsi in dbgis server, file di configrazione db.alias.config) -->

      <param name="db-username-sitiknow">sitiknow</param> <!-- nome dello schema di sitiknow -->
      <param name="db-password-sitiknow">sitiknow_pwd</param> <!-- password dello schema di sitiknow -->
      <param name="db-password-type-sitiknow">PLAIN</param> <!-- modalità della password per sitiknow (da usarsi in dbgis server, file di configrazione db.alias.config) -->

      <param name="db-username-sitiknow_apps">sitiknow_apps</param> <!-- nome dello schema di sitiknow_apps -->
      <param name="db-password-sitiknow_apps">sitiknow_apps_pwd</param> <!-- password dello schema di sitiknow_apps -->
      <param name="db-password-type-sitiknow_apps">PLAIN</param> <!-- modalità della password per sitiknow (da usarsi in dbgis server, file di configrazione db.alias.config) -->

      <param name="data-base-path">D:\\abaco\\data</param> <!-- percorso base dei dati delle applicazioni -->

      <param name="server-ip-dbmap">10.180.7.172</param>
      <param name="server-port-dbmap">8080</param>
      <param name="server-baseURL-dbmap">http://10.180.7.172:8080/wms-proxy</param>
      <param name="dbmap-forcedOracleClient">C:\\capd\\DbMAP_WMS_C\\instantclient_11_2</param> <!-- Parametro 'forcedOracleClient' del file di configurazione server.ini di DbMAP WMS C -->

      <param name="dbmap-datasets-default">C:\\Program Files (x86)\\Apache Software Foundation\\Tomcat 6.0\\webapps\\ROOT\\dsets\\defra</param> <!-- Parametro 'dbmap-datasets-default' del file di configurazione datasets.ini di DbMAP WMS C -->
      <param name="dbmap-projects-path">file:/D:/servers/wms_server/html/prj</param> <!-- Parametro 'dbmapProject' del file di configurazione projects.ini di DbMAP WMS C -->
   </params>

   <set name="dbgis" status="on">
      <basedir>exe/dbgis_server/config</basedir>
      <file>server.config</file>
      <file>db.alias.config</file>
      <file>archives.config</file>
   </set>

   <set name="dbmap_wms_c" status="on">
      <basedir>exe/wms_server/conf</basedir>
      <file>datasets.ini</file>
      <file>projects.ini</file>
      <file>server.ini</file>
      <file>stores.ini</file>
   </set>

   <set name="dbmap_wms" status="on" compressed="true">
      <basedir>war</basedir>
      <archive>DbMAP_WMS.war</archive>
      <file>WEB-INF/web.xml</file>
   </set>

   <set name="sitiAgriMenu" status="on" compressed="true">
      <basedir>war</basedir>
      <archive>sitiAgriMenu.war</archive>
      <file>xml/menu.xml</file>
      <file>WEB-INF/web.xml</file>
   </set>

</config-params>