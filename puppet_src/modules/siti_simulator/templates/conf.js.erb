var configuration = {
  simulator_host : "sim.<%= scope.function_hiera(["capd-external-web-address"]) %>",
  simulator_port : 9500,

  sitiagri_host : "<%= scope.function_hiera(["capapp-ip-host"]) %>",
  sitiagri_port : <%= scope.function_hiera(["capd-real-siti-port"]) %>,


    getSitiAgriAddr: function(){
        return "http://"+this.sitiagri_host+":"+this.sitiagri_port;
    },

    getSimulatorAddr: function(){
        return "http://"+this.simulator_host+":"+this.simulator_port;
    },

    getApiAddr : function(){
        return this.getSimulatorAddr()+"/SitiAgriApi";
    }
}


if ( typeof module !=='undefined') {
  module.exports = {configuration: configuration}
}