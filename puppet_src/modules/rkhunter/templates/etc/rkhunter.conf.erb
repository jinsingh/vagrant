# Log File
LOGFILE=/var/log/rkhunter.log
APPEND_LOG=0
ALLOW_SYSLOG_REMOTE_LOGGING=1

# Mail settings
MAIL-ON-WARNING=<%= @capd_securityalert_notification %>
MAIL_CMD=tail -n 17 /var/log/rkhunter.log | sed 's/^.*\]//' | mail -s "rkhunter scanning results from <%= @hostname %>" -a /var/log/rkhunter.log -- <%= @capd_securityalert_notification %>

# Run all tests
ENABLE_TESTS="all"
DISABLE_TESTS="deleted_files suspscan hidden_procs"

#Script whitelist
SCRIPTWHITELIST=/bin/egrep
SCRIPTWHITELIST=/bin/fgrep
SCRIPTWHITELIST=/bin/which
SCRIPTWHITELIST=/usr/bin/groups
SCRIPTWHITELIST=/usr/bin/ldd
SCRIPTWHITELIST=/usr/bin/lwp-request
SCRIPTWHITELIST=/usr/sbin/adduser
SCRIPTWHITELIST=/usr/sbin/prelink
## add /usr/bin/unhide.rb to avoid a false positive
SCRIPTWHITELIST=/usr/bin/unhide.rb


ATTRWHITELIST="/usr/bin/perl /usr/bin/sudo"

# Enforce SSH root/protocol restrictions
ALLOW_SSH_ROOT_USER=no
ALLOW_SSH_PROT_V1=0

ALLOWDEVFILE=/dev/shm/network/ifstate

# Ignore Folders
ALLOWHIDDENDIR=/etc/.java
ALLOWHIDDENDIR=/dev/.istatic
ALLOWHIDDENDIR=/dev/.udev
ALLOWHIDDENDIR=/dev/.initramfs
ALLOWHIDDENFILE=/dev/.blkid.tab
ALLOWHIDDENFILE=/usr/bin/.ssh.hmac
ALLOWHIDDENFILE=/usr/sbin/.sshd.hmac

# Data Directories
SCRIPTDIR=/usr/share/rkhunter/scripts
INSTALLDIR="/usr"
TMPDIR=/var/lib/rkhunter/tmp
DBDIR=/var/lib/rkhunter/db
