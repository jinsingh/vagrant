# Play Authenticate configuration
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Deadbolt
include "play-authenticate/deadbolt.conf"

# SMTP
include "play-authenticate/smtp.conf"

# And play authenticate
include "play-authenticate/play-authenticate.conf"

include "play-easymail.conf"

service.api.url="http://<%= scope.function_hiera(["capd-ha-virtual-ipaddress"]) %>:<%= scope.function_hiera(["capd-services-port"]) %>"
authservice.api.url="http://<%= scope.function_hiera(["capd-ha-virtual-ipaddress"]) %>:<%= scope.function_hiera(["capd-user-auth-port"]) %>"
client.analytics.trackingId="-"

# web app
app.capdExternalWebAddress = "https://<%= scope.function_hiera(["capweb-ip-host"]) %>:<%= scope.function_hiera(["nginx-port"]) %>"

# Capd Access Token
accessToken.cookieName="CapdAccessToken"

# Capd Auth Token
auth.cookieName="CapdAuthToken"
auth.secureCookie=true
auth.cookiePairSeparator="&"
auth.cookieTimeout=<%= scope.function_hiera(["capd-play-auth-cookie-timeout"]) %>
auth.secretKey="<%= scope.function_hiera(["capd-auth-secure-auth-token-key"]) %>"

# cookie names
client.cookies.seenCookiePolicyNotification="CapdSeenCookiePolicyNotification"
