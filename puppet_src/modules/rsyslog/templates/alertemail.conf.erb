#Module to enable email alerting on certain log entries

$ModLoad ommail # direct email sending

$ActionMailSMTPServer <%= @defra_capd_smtp_relay_name %>
$ActionMailFrom rsyslog@<%= @fqdn %>
$ActionMailTo CAPDAlerts@kainos.com
$template mailSubject,"Rsyslog Alert for %hostname%"
$template mailBody,"%msg%"
$ActionMailSubject mailSubject
$ActionExecOnlyOnceEveryInterval 60
:syslogtag, contains, "TEST" :ommail:;mailBody