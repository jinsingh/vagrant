-- SITI
CREATE USER siti
IDENTIFIED BY <%= scope.function_hiera(["abaco-db-siti-password"]) %>
PROFILE DEFAULT
DEFAULT TABLESPACE siti_tbl
ACCOUNT UNLOCK;

GRANT CONNECT TO siti;
GRANT RESOURCE TO siti;

grant ALTER SESSION TO siti;
grant CREATE CLUSTER TO siti;
grant CREATE DATABASE LINK TO siti;
grant CREATE SEQUENCE TO siti;
grant CREATE SYNONYM TO siti;
grant CREATE TABLE TO siti;
grant CREATE TRIGGER TO siti;
grant CREATE VIEW TO siti;
grant CREATE PROCEDURE TO siti;
grant CREATE TYPE TO siti;
grant DEBUG ANY PROCEDURE TO siti;

--REVOKE UNLIMITED TABLESPACE FROM siti;
ALTER USER siti QUOTA UNLIMITED ON siti_tbl;

